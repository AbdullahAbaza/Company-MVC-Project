@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";

    // var viewDataMesssage = ViewData["Message"]; 
    string viewDataMesssage = ViewData["Message"] as string; // Enforce Type Safety

    var viewBagMesssage = ViewBag.Message; 

}

